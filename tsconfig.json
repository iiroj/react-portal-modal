{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "declaration": true,
    "jsx": "react",
    "lib": ["dom", "es6"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noResolve": false,
    "noUnusedParameters": true,
    "outDir": "./lib",
    "pretty": true,
    "rootDir": "./src",
    "sourceMap": true,
    "strict": true,
    "target": "es5"
  },
  "exclude": ["./stories"]
}
