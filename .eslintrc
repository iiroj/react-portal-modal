{
  "parser": "babel-eslint",
  "plugins": [
    "jest",
    "react",
    "prettier",
    "flowtype"
  ],
  "extends": [
    "plugin:jest/recommended",
    "plugin:react/recommended",
    "prettier",
    "prettier/react",
    "plugin:flowtype/recommended"
  ],
  "env": {
    "browser": true,
    "es6": true,
    "node": true,
    "jest": true
  },
  "globals": {
    "WEBPACK_INJECT": true
  },
  "settings": {
    "flowtype": {
      "onlyFilesWithFlowAnnotation": true
    }
  },
  "parserOptions": {
    "ecmaVersion": 8,
    "sourceType": "module",
    "ecmaFeatures": {
      "experimentalObjectRestSpread": true,
      "jsx": true
    }
  },
  "rules": {
    "react/prop-types": 0,
    "react/display-name": 0,
    "no-unused-vars": [
      2,
      {
        "args": "none",
        "vars": "all",
        "varsIgnorePattern": "hJSX"
      }
    ],
    "no-undef": 2,
    "prettier/prettier": [
      "error",
      {
        "printWidth": 120,
        "semi": true,
        "singleQuote": true,
        "trailingComma": "es5"
      }
    ]
  }
}
